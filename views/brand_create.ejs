<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css" />
    <link rel="stylesheet" type="text/css" href="/stylesheets/brands.css" />
    <title><%= title %></title>
  </head>
  <body>
    <div class="mainBody">
      <%- include("./partials/header") %>
      <%- include("./partials/navbar") %>
      <div class="mainContentContainer">
        <div class="createBrandContainer">
          <h1><%= title %></h1>
          <form method="post" class="brandForm">
              <label for="brandName">Brand Name</label>
              <input type="text" name="brandName" value="<%= name %>" required>
              <label for="brandDesc">Brand Description</label>
              <input type="text" name="brandDesc" value="<%= description %>" required>
              <label for="adminCode">Admin Password</label>
              <input type="password" name="adminCode" required>
              <button type="submit">Submit</button>
          </form>
          <% if (errors) { %>
            <% errors.forEach((error) => { %>
              <div>- <%= error.message %></div>
            <% }) %>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>